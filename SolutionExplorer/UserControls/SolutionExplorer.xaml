<UserControl x:Class="SolutionExplorer.UserControls.SolutionExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:converters="clr-namespace:SolutionExplorer.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:TreeViewItemIndentConverter x:Key="TreeViewItemIndentConverter"/>
        <Style x:Key="CollapseExpandToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="ClickMode" Value="Press"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <Path x:Name="Collapsed"
                                  Data="M 0 0 L 4 4 0 8 Z"
                                  Stroke="Black"
                                  StrokeThickness="0.5"
                                  Fill="Transparent"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            <Path x:Name="Expanded"
                                  Data="M 5.6 0 L 5.6 5.6 0 5.6 Z"
                                  Stroke="Black"
                                  StrokeThickness="0.5"
                                  Fill="Black"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="Hidden"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Collapsed"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Hidden}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Expanded"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="{x:Type TreeViewItem}" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="HeaderedItem"
                                    BorderThickness="1"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Padding="2"
                                    ContextMenuOpening="HeaderedItem_ContextMenuOpening">
                                <WrapPanel>
                                    <WrapPanel VerticalAlignment="Center" Margin="0,0,8,0">
                                        <Border>
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource TreeViewItemIndentConverter}">
                                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type TreeViewItem}}"/>
                                                </MultiBinding>
                                            </Border.Width>
                                        </Border>
                                        <ToggleButton x:Name="Expander"
                                                      Style="{StaticResource CollapseExpandToggleStyle}"
                                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                      Visibility="{Binding IsFolder, Converter={StaticResource TrueFalseToVisibleHiddenConverter}}"/>
                                        <svgc:SvgViewbox Width="12" Height="12" Source="{Binding Icon}"/>
                                    </WrapPanel>
                                    <TextBlock x:Name="CaptionViewMode"
                                               Text="{Binding Name, UpdateSourceTrigger=Explicit}"
                                               Visibility="{Binding IsEditting, Converter={StaticResource InverseTrueFalseToVisibleCollapsedConverter}}"/>
                                    <TextBox x:Name="CaptionEditMode"
                                             Text="{Binding Name, UpdateSourceTrigger=Explicit}"
                                             Visibility="{Binding IsEditting, Converter={StaticResource TrueFalseToVisibleCollapsedConverter}}"
                                             IsVisibleChanged="CaptionEditMode_IsVisibleChanged"
                                             KeyDown="CaptionEditMode_KeyDown"
                                             LostKeyboardFocus="CaptionEditMode_LostKeyboardFocus"/>
                                </WrapPanel>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="RenameMenuItem" Header="Rename" Click="RenameMenuItem_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Visibility="Collapsed"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="HeaderedItem"
                                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#CCE8FF"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="HeaderedItem"
                                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0:0:0" Value="Blue"/>
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unselected"/>
                                    <VisualState x:Name="SelectedInactive">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="HeaderedItem"
                                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#CCE8FF"/>
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="HasItemsStates">
                                    <VisualState x:Name="NoItems">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Expander"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Hidden}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="HasItems"/>
                                </VisualStateGroup>
                                <VisualStateGroup Name="ExpansionStates">
                                    <VisualState x:Name="Expanded">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemsHost"
                                                                               Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Collapsed"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TreeView x:Name="SolutionTreeView"
                  ItemsSource="{Binding Items}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <ContentPresenter/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
